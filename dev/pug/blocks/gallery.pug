.gallery
	h2.gallery__title.section__title Galeria
	nav.gallery__nav
		ul.menu--section
			li.menu__item: a(href="#").menu__link.active Todo
			li.menu__item: a(href="#").menu__link Gente
			li.menu__item: a(href="#").menu__link Lugares
			li.menu__item: a(href="#").menu__link Naturaleza

	.img-gallery
		-for (var i = 1; i <= 12; i++)
			.img-gallery__item
				img(src="img/0"+ i +".jpg").img-gallery__img
